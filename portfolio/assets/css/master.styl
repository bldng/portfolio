@import 'font.css'
@import '_slider'
@import '_settings'

$color = salmon
$human = black
$bot   = teal


normalize-css()
base()

*
	box-sizing: border-box

h1.landing
	color: #efefef
	line-height: 50px
	position: fixed
	z-index: -1

body, html
	height: 100%;
	overflow-x: hidden;
body
	padding: 50px
	transition: .4s background
		
.main
	padding: 50px
	position: absolute
	background: white
	top: 0
	left: 0
	bottom: 0
	width: 100vw
	z-index: 200
	min-height: 100vh
	transition: .4s
	// clip-path: circle(71% at 50% 50%)
		
	*
		transition: .6s
		transition-delay: .4s
	
	&.hidden
		.conversation
			div
				margin-top: 30px
		position: fixed
		cursor: pointer
		background: $bot
		// clip-path: circle(50px at 50% 50%)
			
		overflow: hidden
		min-height: 0
		width: 100px
		height: 100px
		top: 350px
		border-radius: 50px
		left: calc(50% - 50px)
		
		&:hover
			transform: scale(1.2)	
		*
			transition-delay: 0
			transition: .4s
			opacity: 0
			pointer-events:none
	&.video
		opacity: 0
			
	&.howdoyulikethat
		font-family: "Comic Sans MS" !important
		color: yellow !important
		background: purple !important

// @-moz-document url-prefix() 
